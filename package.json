{
  "name": "accountingforrepairsbackend",
  "version": "1.0.0",
  "description": "Backend for Accounting for Repairs system",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon src/index.ts",
    "start:prod": "pm2 start dist/index.js --name RepairsAccounting --interpreter /root/.nvm/versions/node/v24.5.0/bin/node",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "create-admin": "ts-node src/scripts/createAdmin.ts",
    "create-default-admin": "ts-node src/scripts/createDefaultAdmin.ts",
    "add-mock-data": "ts-node src/scripts/AddMockDataIntoDatabase.ts",
    "generate-defauil-env": "node scripts/generateDefaultEnv.js",
    "logs:cleanup": "ts-node src/scripts/cleanupLogs.ts"
  },
  "keywords": [
    "repair",
    "accounting",
    "express",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/multer": "^2.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "helmet": "^8.0.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "sqlite3": "^5.1.7",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.5",
    "@types/sqlite3": "^3.1.11",
    "@types/supertest": "^6.0.2",
    "jest": "^30.0.5",
    "nodemon": "^3.1.9",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  }
}
